    <script type="text/javascript">
        $(document).ready(() => {
            const loginbtn = $("#loginbtn");
            const signupbtn = $("#signupbtn");
            const logoutbtn = $("#logoutbtn");
            const accbtn = $("#accbtn");

            const memberButtonSet = $(".member");
            const anonymousButtonSet = $(".anonymous");
            const loginName = $("#loginName");



            const showMemberSet = () => {
                anonymousButtonSet.hide();
                memberButtonSet.show();
            };

            const showAnonymousSet = () => {
                memberButtonSet.hide();
                anonymousButtonSet.show();
            };
            userID = Cookies.get("x-member-id");
            if (userID) {
                fetch(`https://us-central1-pypay-cloudserver.cloudfunctions.net/payment/user/${userID}`).then(res => res.json()).then(data => {
                    first_name = data["fname"];
                    loginName.text(`Welcome,${first_name}`);
                }).catch(err => console.log(err));
            }

            signupbtn.on("click", event => {
                event.preventDefault();
                window.location.href = "https://us-central1-pypay-cloudserver.cloudfunctions.net/payment/signup";
            });

            loginbtn.on("click", event => {
                event.preventDefault();
                window.location.href = "https://us-central1-pypay-cloudserver.cloudfunctions.net/payment/login";
            });


            logoutbtn.on("click", event => {
                event.preventDefault();
                window.location.href = "https://us-central1-pypay-cloudserver.cloudfunctions.net/payment/logout";
            });
            accbtn.on("click", event => {
                event.preventDefault();
                window.location.href = "https://us-central1-pypay-cloudserver.cloudfunctions.net/payment/account";
            });
        });
