        <script type="text/javascript">
            function abc() {
                event.preventDefault();
                var forgotpd = prompt("Please fill in your email");

                if (forgotpd) {

                    var emailRegxp = /^([\w]+)(.[\w]+)*@([\w]+)(.[\w]{2,3}){1,2}$/;



                    if (emailRegxp.test(forgotpd) != true) {
                        alert("Please fill in the correct email!");
                        return;
                    }
                    fetch("https://us-central1-pypay-cloudserver.cloudfunctions.net/payment/forgotemail", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        mode: "cors",
                        body: JSON.stringify({
                            remail: forgotpd
                        })
                    }).then(res => res.json()).then(data => {

                        if (data.error) {
                            window.alert(`${data.error}`);
                        } else {
                            window.alert(`Sent email successfully!${data}`);

                        }
                    }).catch(err => window.alert(`error:${err}`));

                }
                else {
                    window.alert("Please fill in the email address!");
                }

            }
        </script>

