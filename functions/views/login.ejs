    <script type="text/javascript">
        $(document).ready(() => {

            const loginButton = $("#loginButton");

            const modalInputUsername = $("#inputUsername");
            const modalInputPassword = $("#inputPassword");


            $(".txtb input").on("focus", function () {
                $(this).addClass("focus");
            });

            $(".txtb input").on("blur", function () {
                if ($(this).val() == "")
                    $(this).removeClass("focus");
            });


            loginButton.on("click", event => {
                event.preventDefault();

                if (modalInputUsername.val() && modalInputPassword.val()) {

                    fetch("https://us-central1-pypay-cloudserver.cloudfunctions.net/payment/auth", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        mode: "cors",
                        body: JSON.stringify({
                            user: modalInputUsername.val(),
                            pass: modalInputPassword.val()
                        })
                    }).then(res => res.json()).then(data => {
                        loginButton.removeAttr("disabled");
                        modalInputUsername.removeAttr("disabled");
                        modalInputPassword.removeAttr("disabled");
                        modalInputUsername.val("");
                        modalInputPassword.val("");

                        if (data.error) {
                            alert("Username or password is incorrect!");

                        } else {
                            window.location.href = "https://us-central1-pypay-cloudserver.cloudfunctions.net/payment";
                        }
                    }).catch(err => alert(`error: ${err}`));
                } else {
                    alert("Please fill in Username and Password!");
                }
            });

        });

    </script>

